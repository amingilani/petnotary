          %a.item{:href => "mailto:feedback.petlist@gilani.me"}
            %i.envelope.outline.icon
            Feedback
          %a.item{:href => "mailto:partnerships.petlist@gilani.me"}
            %i.envelope.outline.icon
            Partnerships
